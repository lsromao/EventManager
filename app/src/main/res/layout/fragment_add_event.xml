<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollViewAddEvents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:id="@+id/linearLayoutAddEvents"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/coverAddEvents"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                app:srcCompat="@drawable/ic_picture"
                tools:srcCompat="@drawable/ic_picture" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:background="#00FFFFFF" />

            <EditText
                android:id="@+id/titleEventAddEvents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:hint="Title Event" />

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:background="#00FFFFFF" />

            <EditText
                android:id="@+id/locationAddEvents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="false"
                android:gravity="center_horizontal"
                android:hint="Location" />

            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:background="#00FFFFFF" />

            <EditText
                android:id="@+id/descriptionAddEvents"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:hint="Add your description"
                android:lines="5"
                android:maxLength="100"
                android:minLines="1" />


            <View
                android:id="@+id/divider4"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:background="#00FFFFFF" />

            <LinearLayout
                android:id="@+id/addEventsLinearDatesLayout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="0dp">

                <EditText
                    android:id="@+id/startDateAddEvents"
                    android:layout_width="195dp"
                    android:layout_height="match_parent"
                    android:focusableInTouchMode="false"
                    android:gravity="center_horizontal"
                    android:hint="Start Date" />

                <EditText
                    android:id="@+id/startTimeAddEvents"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:focusableInTouchMode="false"
                    android:gravity="center_horizontal"
                    android:hint="Start Time" />


            </LinearLayout>

            <View
                android:id="@+id/divider5"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:background="#00FFFFFF" />

            <LinearLayout
                android:id="@+id/addEventsSpinners"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="0dp">

                <Spinner
                    android:id="@+id/privacyAddEvents"
                    android:layout_width="188dp"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal" />

                <Spinner
                    android:id="@+id/categoryAddEvents"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal" />


            </LinearLayout>

            <View
                android:id="@+id/divider6"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:background="#00FFFFFF" />

            <Button
                android:id="@+id/saveEvent"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Save" />


            <ProgressBar
                android:id="@+id/progressBarAddAEvents"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:visibility="gone" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>